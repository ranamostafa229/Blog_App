# Set the base image

FROM node:14

# Set the working directory

WORKDIR /app

# Copy package.json and install dependencies

COPY package.json .
RUN npm install

# Copy the rest of your application files

COPY . .

# Build the React app

RUN npm run build

# Expose the port that the app runs on

EXPOSE 3000

# Define the command to run the app

CMD ["npm", "start"]
